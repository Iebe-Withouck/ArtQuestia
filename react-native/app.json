{
  "expo": {
    "name": "ArtQuestia",
    "slug": "ArtQuestia",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "artquestia",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "bundleIdentifier": "com.ArtQuestia.devclientapp",
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app uses your location to show your position on the map."
      }
    },
    "android": {
      "package": "com.ArtQuestia.artquestia",
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "icon": "./assets/images/icon.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/icon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "@reactvision/react-viro",
        {
          "android": {
            "xRMode": "AR"
          },
          "ios": {
            "cameraUsagePermission": "ArtQuestia uses your camera for AR experiences.",
            "microphoneUsagePermission": "ArtQuestia uses your microphone for AR experiences.",
            "photosPermission": "ArtQuestia would like to read photos for AR experiences.",
            "savephotosPermission": "ArtQuestia would like to save photos to your library during AR experiences."
          }
        }
      ],
      [
        "@maplibre/maplibre-react-native"
      ],
      [
        "expo-location"
      ],
      "expo-secure-store"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
